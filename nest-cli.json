{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets" : [
      { "include": "../public/**/*", "outDir": "dist/public" },
      { "include": "../views/**/*", "outDir": "dist/views" },
      { "include": "src/config/mail/templates/**/*", "outDir": "dist/config/mail/templates" }
    ],
    "watchAssets": true
  }
}
